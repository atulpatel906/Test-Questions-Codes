package PackageOne;
 
public class Question3A {

    public static void main(String[] args) {
        // Calling the fileExist method to check if the file exists
        fileExist();
    }

    public static void fileExist() {
        // Corrected file path, using double backslashes or a forward slash
        String filepath = "C:\\Users\\Atul\\Documents\\dictionary.doc";

        // Create File object
        File file = new File(filepath);

        // Check if file exists and print appropriate message
        if (file.exists()) {
            System.out.println("File exists");
        } else {
            System.out.println("File does not exist");
        }
    }
}
